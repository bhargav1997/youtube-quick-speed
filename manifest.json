{
   "manifest_version": 3,
   "name": "YouTube Quick Speed",
   "version": "1.0",
   "description": "Control YouTube playback speed beyond default limits.",
   "permissions": ["activeTab", "scripting"],
   "host_permissions": ["*://*.youtube.com/*"],
   "action": {
      "default_popup": "popup.html",
      "default_title": "YouTube Speed Controller"
   },
   "content_scripts": [
      {
         "matches": ["*://*.youtube.com/*"],
         "js": ["content.js"],
         "run_at": "document_end"
      }
   ]
}
