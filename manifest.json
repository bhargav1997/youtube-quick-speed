{
   "manifest_version": 3,
   "name": "YouTube Quick Speed & Loop Control",
   "version": "1.2.0",
   "description": "Control playback speed (up to 16x), fast forward ads, loop video sections, and boost volume on YouTube. Privacy-first, no tracking.",
   "permissions": ["activeTab", "scripting", "storage"],
   "host_permissions": ["*://www.youtube.com/*", "*://m.youtube.com/*"],
   "action": {
      "default_popup": "popup.html",
      "default_title": "YouTube Speed Controller",
      "default_icon": {
         "16": "icon16.png",
         "48": "icon48.png",
         "128": "icon128.png"
      }
   },
   "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
   },
   "content_scripts": [
      {
         "matches": ["*://www.youtube.com/*", "*://m.youtube.com/*"],
         "js": ["content.js"],
         "run_at": "document_end"
      }
   ]
}
